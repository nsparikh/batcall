<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.batsignal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.example.batsignal.NearbyPlacesActivity"
            android:label="@string/title_activity_nearby_places" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.batsignal.PlacesListFragment"
            android:label="@string/title_activity_places_list_fragment" >
        </activity>
        
        <activity
            android:name="com.example.batsignal.PlacesMapFragment"
            android:label="@string/title_activity_places_map_fragment" >
        </activity>
        
    </application>

</manifest>
